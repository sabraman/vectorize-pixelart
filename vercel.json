{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/next",
      "config": {
        "zeroConfig": true
      }
    }
  ],
  "buildCommand": "cd web && pnpm install --frozen-lockfile && pnpm build",
  "devCommand": "cd web && pnpm dev",
  "outputDirectory": "web/.next",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/web/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Vectorize Pixelart"
  }
}

